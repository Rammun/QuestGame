@model QuestGame.WebApi.Models.RegistrationViewModel

@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Registration</h2>

@using(Html.BeginForm())
{
    <div>
        <div>
            @Html.LabelFor(m => m.Name)
            @Html.EditorFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name)
        </div>
        <div>
            @Html.LabelFor(m => m.Password)
            @Html.EditorFor(m => m.Password)
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <div>
            @Html.LabelFor(m => m.ConfirmationPassword)
            @Html.EditorFor(m => m.ConfirmationPassword)
            @Html.ValidationMessageFor(m => m.ConfirmationPassword)
        </div>
        
        <input type="submit" id="submit" value="Регистрация" />
    </div>
}